                                <!--<image-->
                                        <!--jcr:primaryType="nt:unstructured"-->
                                        <!--assetGroup="media"-->
                                        <!--assetMimetype="image/*"-->
                                        <!--droptarget="image"-->
                                        <!--resourceType="toryburch/components/spa/image"-->
                                        <!--type="Images"/>-->
                            <!--</assetToComponentMapping>-->
                        <!--</cq:authoring>-->
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                        <section jcr:primaryType="nt:unstructured"/>
                    </aem-poc-policy>
                </parsys>
            </components>
        </foundation>
    </wcm>
    <!-- No page policies required cause there is no need to add custom clienlibs or extra styles on Tory Burch/Sport pages -->
</jcr:root>

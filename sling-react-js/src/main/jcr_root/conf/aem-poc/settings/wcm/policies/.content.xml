                            mergeList="{Boolean}true"/>
                    <default
                            jcr:description="Policy of the default page"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Default Page"
                            sling:resourceType="wcm/core/components/policy/policy"
                            clientlibs="[wcm.foundation.components.page.responsive]">
                        <jcr:content
                                jcr:primaryType="nt:unstructured"
                                mergeList="{Boolean}true"/>
                    </default>
                </page>
                <parsys jcr:primaryType="nt:unstructured">
                    <aem-poc-policy jcr:primaryType="nt:unstructured"
                            jcr:title="AEM POC Policy"
                            sling:resourceType="wcm/core/components/policy/policy"
                            components="[group:AEM-React POC]">
